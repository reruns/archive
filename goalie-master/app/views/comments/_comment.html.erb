<% id = (params[:action] == "show" ? params[:id] : params[:user_id]) %>
<% id_type = (params[:action] == "show" ? "Goal" : "User") %>

<% if logged_in? %>
  <div class="row">
    <div class="col-xs-9 col-xs-offset-1">
      <form action="<%= comments_url %>" method="post" role="form">
        <%= auth_token %>
        <div class="form-group">
          <label for="Comment">Comment</label> <br>
          <textarea name="comment[comment]" rows="8" cols="100" id="Comment"></textarea>
        </div>
        <input type="hidden" name="owner_id" value="<%= id %>">
        <input type="hidden" name="id_type" value="<%= id_type %>">
        <button type="submit" class="btn btn-default">Submit Comment</button>
      </form>
    </div>
  </div>
<% end %>

<br>
<ul class="list-group">
  <% replies.each do |reply| %>
    <li class="list-group-item">
      <h5>Posted By: <%= reply.author.username %></h5>
      <p><%= reply.comment %></p>
    </li>
  <% end %>
</ul>
